      /*background video css*/
      .bg-video {
        position: relative;
        bottom: 0;
        background: rgba(0, 0, 0, 0.5);
        padding: 20px;
      }
    
      /* Tooltip container */
      .tooltip {
        position: relative;
        display: inline-block;
      }
    
      /* Tooltip text */
      .tooltip .tooltiptext {
        visibility: hidden;
        width: 120px;
        background-color: white;
        color: black;
        text-align: center;
        padding: 5px 0;
        border-radius: 6px;
    
        /* Position the tooltip text - see examples below! */
        position: absolute;
        z-index: 1;
        font-style: oblique;
      }
    
      /* Show the tooltip text when you mouse over the tooltip container */
      .tooltip:hover .tooltiptext {
        visibility: visible;
      }
    </style>
